@Article{KAYE2021293,
  author   = {Alan D. Kaye and Chikezie N. Okeagu and Alex D. Pham and Rayce A. Silva and Joshua J. Hurley and Brett L. Arron and Noeen Sarfraz and Hong N. Lee and G.E. Ghali and Jack W. Gamble and Henry Liu and Richard D. Urman and Elyse M. Cornett},
  journal  = {Best Practice Research},
  title    = {Economic impact of COVID-19 pandemic on healthcare facilities and systems: International perspectives},
  year     = {2021},
  issn     = {1521-6896},
  note     = {Consideration for Providing Safe Perioperative and Intensive Care in the Time of Crisis},
  number   = {3},
  pages    = {293-306},
  volume   = {35},
  abstract = {International hospitals and healthcare facilities are facing catastrophic financial challenges related to the COVID-19 pandemic. The American Hospital Association estimates a financial impact of $202.6 billion in lost revenue for America's hospitals and healthcare systems, or an average of $50.7 billion per month. Furthermore, it could cost low- and middle-income countries ~ US$52 billion (equivalent to US$8.60 per person) each four weeks to provide an effective healthcare response to COVID-19. In the setting of the largest daily COVID-19 new cases in the US, this burden will influence patient care, surgeries, and surgical outcomes. From a global economic standpoint, The World Bank projects that global growth is projected to shrink by almost 8% with poorer countries feeling most of the impact, and the United Nations projects that it will cost the global economy around 2 trillion dollars this year. Overall, a lack of preparedness was a major contributor to the struggles experienced by healthcare facilities around the world. Items such as personal protective equipment (PPE) for healthcare workers, hospital equipment, sanitizing supplies, toilet paper, and water were in short supply. These deficiencies were exposed by COVID-19 and have prompted healthcare organizations around the world to invent new essential plans for pandemic preparedness. In this paper, we will discuss the economic impact of COVID-19 on US and international hospitals, healthcare facilities, surgery, and surgical outcomes. In the future, the US and countries around the world will benefit from preparing a plan of action to use as a guide in the event of a disaster or pandemic.},
  doi      = {https://doi.org/10.1016/j.bpa.2020.11.009},
  keywords = {economy, healthcare, emergency preparedness, international healthcare, hospitals},
  url      = {https://www.sciencedirect.com/science/article/pii/S1521689620301142},
}

